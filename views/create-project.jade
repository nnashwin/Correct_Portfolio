extends layout

block content

  .container#create-project-form
    .row
      h1.text-center Create a Project
    .row
      .div.col-md-offset-3.col-md-6
        form(role='form' id='create-project' action='/projects' method='post')
          div.form-group
            label(for='project-title') Title
            input(type='text' id='project-title' name='title' class='form-control' placeholder='')
          div.form-group
            label(for='project-description') Description
            textarea(type='text' id='project-description' name='description' class='form-control' placeholder='')
          div.form-group
            label(for='date-begun') Date Started
            input(type='text' id='date-begun' name='date_begun' class='form-control' placeholder='')
          div.form-group
            label(for='date-ended') Date Completed
            input(type='text' id='date-ended' name='date_ended' class='form-control' placeholder='')
          div.form-group
            label(for='github') Github repository
            input(type='text' id='github' name='github' class='form-control' placeholder='')
          div.form-group
            label(for='comments') Personal comments
            input(type='text' id='comments' name='comments' class='form-control' placeholder='')
          button(type='submit' class='btn btn-default') Submit Post
          