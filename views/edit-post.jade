extends layout

block content

    .container-fluid#create-blogpost-form
        .row
            h1.text-center Write a Blog Post!
        .row
            .div.col-md-offset-3.col-md-6
                form(role='form' id='create-blogpost' action='/blog' method='post')
                    div.form-group
                        label(for='post-title') Title
                        input(type='text' id='post-title' name='title' class='form-control' placeholder='')
                        input(type='hidden' value='PUT' name='_method')
                    div.form-group
                        label(for='post-content') Content
                        textarea(type='text' id='post-content' name='content' class='form-control' placeholder='')
                    div.form-group
                        label(for='post-description') Description
                        input(type='text' id='post-description' name='description' class='form-control' placeholder='')
                    button(type='submit' class='btn btn-default') Write a Post!
                form(role='form' id='delete-post' action='/blog/#{post._id}' method='post')
                    input(type='hidden' value='DELETE' name='_method')
                    button#delete_post(type='submit' class='btn btn-default') Delete Post
          