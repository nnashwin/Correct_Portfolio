extends layout

block content

  .container#update-project-form
    .row
      h1.text-center Update a Project
    .row
      .div.col-md-offset-3.col-md-6
        form(role='form' id='create-project' action='/projects/#{project._id}' method='post')
          div.form-group
            label(for='project-title') Title
            input(type='text' id='project-title' name='title' class='form-control' placeholder='#{project.title}')
            input(type='hidden' value='PUT' name='_method')
          div.form-group
            label(for='project-description') Description
            textarea(type='text' id='project-description' name='description' class='form-control' placeholder='#{project.description}')
          div.form-group
            label(for='date-begun') Date Started
            input(type='text' id='date_begun' name='date_begun' class='form-control' placeholder='#{project.date_begun}')
          div.form-group
            label(for='date-ended') Date Completed
            input(type='text' id='date_ended' name='date_ended' class='form-control' placeholder='#{project.date_ended}')
          div.form-group
            label(for='github') Github repository
            input(type='text' id='github' name='github' class='form-control' placeholder='#{project.github}')
          div.form-group
            label(for='comments') Personal comments
            input(type='text' id='comments' name='comments' class='form-control' placeholder='#{project.comments}')
          button(type='submit' class='btn btn-default') Submit Project
        form(role='form' id='delete-project' action='/projects/#{project._id}' method='post')
          input(type='hidden' value='DELETE' name='_method')
          button#delete_project(type='submit' class='btn btn-default') Delete Project
          